        <!-- ****** subscription data goes from here ******* -->
        <template id="portal_my_home_invoice" name="Subscription" inherit_id="portal.portal_my_home" customize_show="True" priority="10">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <div class="subscription_blk portal_item_blk">
                    <a class="list-group-item list-group-item-action" href="/customer/subscription" title="My Subscription">
                        <div class="subscription_img">
                            <img src="/meta_portal_ui/static/description/images/subscription.png" alt=""/>
                        </div>
                        <h3>My Subscription</h3>
                    </a>
                </div>
            </xpath>
        </template>


