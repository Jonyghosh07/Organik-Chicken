                                                    <div>
                                                        <img src="meta_track_order/static/src/image/4.png"
                                                             class="status_image" style="width:80px; height:80px;"/>
                                                    </div>
                                                    <div style="margin:15px;">
                                                        <img src="meta_track_order/static/src/image/green.png"/>

                                                    </div>
                                                    <strong style="color:green; margin:top">Delivered</strong>
                                                    <div style="color:#7f8c8d">
                                                        <t t-if="sale_id.delivery_done"
                                                           t-esc="sale_id.delivery_done_date.strftime('%d-%m-%Y')"/>
                                                    </div>
                                                    <!--                                                    <div style="color:#7f8c8d">-->
                                                    <!--                                                        <t t-esc="stock_picking.delivered.strftime('%I:%M %p')"/>-->
                                                    <!--                                                    </div>-->
                                                </t>
                                                <t t-else="">
                                                    <div style="margin:15px;">
                                                        <img src="meta_track_order/static/src/image/4.png"
                                                             class="status_image" style="width:80px; height:80px;"/>
                                                    </div>
                                                    <div style="margin:15px;">
                                                        <img src="meta_track_order/static/src/image/ashes.png"/>
                                                    </div>
                                                    <t style="margin:top">Delivered</t>
                                                    <div></div>
                                                    <div></div>
                                                </t>
